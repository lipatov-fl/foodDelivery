<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="32dp"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/burgerr"
        android:layout_width="333dp"
        android:layout_height="312dp"
        android:layout_marginTop="112dp"
        android:contentDescription="@string/food_logo_description"
        app:layout_constraintBottom_toTopOf="@id/secondTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burgerr" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/secondTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="@string/second_title"
        android:textAlignment="center"
        android:textColor="@color/start_color_green"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/yeonsung"
        app:layout_constraintBottom_toTopOf="@id/btnGoUserLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burgerr" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGoUserLogin"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginTop="162dp"
        android:background="@drawable/green_btn"
        android:elevation="3dp"
        android:fontFamily="@font/yeonsung"
        android:gravity="center"
        android:outlineAmbientShadowColor="@color/start_color_green"
        android:outlineSpotShadowColor="@color/start_color_green"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/desingAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTitle"
        tools:ignore="UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/desingAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/footer_design_by"
        android:textAlignment="center"
        android:textColor="@color/start_color_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/yeonsung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoUserLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>